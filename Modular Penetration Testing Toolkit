import socket
import requests

# === Port Scanner ===
def port_scanner(target, ports=[21, 22, 23, 80, 443, 8080]):
    print(f"\n[*] Scanning ports on {target}")
    for port in ports:
        try:
            sock = socket.socket()
            sock.settimeout(1)
            sock.connect((target, port))
            print(f"[+] Port {port} is OPEN")
            sock.close()
        except:
            pass

# === Brute Force Login Tester (example with POST request) ===
def brute_force_login(url, usernames, passwords):
    print(f"\n[*] Starting brute force attack on {url}")
    for username in usernames:
        for password in passwords:
            data = {'username': username, 'password': password}
            response = requests.post(url, data=data)
            if "Login Failed" not in response.text:
                print(f"[+] Success: {username}:{password}")
                return
    print("[-] No valid credentials found.")

# === Main Menu ===
def main():
    print("Penetration Testing Toolkit")
    print("1. Port Scanner")
    print("2. Brute Force Login Tester")
    choice = input("Choose a tool: ")

    if choice == '1':
        target = input("Enter target IP/Host: ")
        port_scanner(target)
    elif choice == '2':
        url = input("Enter login form URL: ")
        usernames = ["admin", "user"]
        passwords = ["1234", "password", "admin"]
        brute_force_login(url, usernames, passwords)
    else:
        print("Invalid choice")

if __name__ == "__main__":
    main()
